<html lang="en">
  <%- include('./header') -%>
  <body>
    <section id="app-logo">
      <div class="container xlp-container">
        <div class="row justify-content-between">
          <div class="col-md-12">
            <img src="/images/logo-ipsum.png" style="max-width: 200px; margin: 25px; float: left;" class="img-fluid" alt="app-logo"/>
            <img src="/images/connected-app.svg" style="max-width: 200px; float: right;" class="img-fluid" alt="xero-app-partner-logo"/>
        </div>
      </div>
    </section>

    <section id="key-benefit">
      <div class="container">
        <div class="jumbotron xlp-jumbotron">
          <div class="xlp-jumbotron-text text-center">
            <h1 class="display-5">
              Create account
            </h1>
            <p class="lead">
              Sign up with Xero and your accounting data will populate your new account
            </p>
            <hr>
            <div class="row text-center">
              <span style="margin: 0 auto; margin-top: 50px;" data-xero-sso data-theme="dark" data-href='<%= authorizeUrl %>' data-size="large" data-height="60" data-label="Sign in with Xero"></span>
              <script src="https://edge.xero.com/platform/sso/xero-sso.js" async defer></script>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>

