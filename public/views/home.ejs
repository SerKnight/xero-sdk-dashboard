<html lang="en">
  <%- include('./header') -%>
  <body>
    <section id="app-logo">
      <div class="container xlp-container">
        <div class="row justify-content-between">
          <div class="col-md-12">
            <img src="/images/logo-ipsum.png" style="max-width: 200px; margin: 25px; float: left;" class="img-fluid" alt="app-logo"/>
            <img src="/images/connected-app.svg" style="max-width: 200px; float: right;" class="img-fluid" alt="xero-app-partner-logo"/>
        </div>
      </div>
    </section>

    <section id="key-benefit">
      <div class="container">
        <div class="jumbotron xlp-jumbotron" style="padding-top: 30px;">
          <div class="xlp-jumbotron-text text-center">
            <p>Logoipsum is an example <a  target='_blank' href='https://developer.xero.com/partner/app-partner'>XeroAPI integration</a> to view of all your Xero org's invoices!<hr><strong><i style='color: red; font-size: 13px;'>The <a target="_blank" href='https://github.com/SerKnight/xero-sso'>app's code</a> will not create, update or store any sensitive data</i></strong></p>
            <hr>
            <br>
            <div class="row text-center">
              <div class='col-md-6'>
                <img src="/images/callback-flow.png" class="img-fluid" alt="app-logo"/>
              </div>
              <div class='col-md-6'>
                <p class="lead" style="margin-top: 50px;">
                  Sign up with Xero and your Invoice data will be <br> populated in your Logoipsum account
                </p>
                <span style="margin: 0 auto; margin-top: 30px;" data-xero-sso data-theme="dark" data-href='<%= authorizeUrl %>' data-size="large" data-height="60" data-label="Sign in with Xero"></span>
                <script src="https://edge.xero.com/platform/sso/xero-sso.js" async defer></script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>

